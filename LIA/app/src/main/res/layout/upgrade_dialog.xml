<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "You have reached the end of the trial version for this test. Unlock the premium version of the test and get access to:"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = " ► All test questions and answers \n ► Expert expalantions to answers \n ► Performance tracking and analytics \n ► Optimized test environment to maximize your learning potential\n"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_margin="0dp"
        android:paddingTop="10dp"

        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "press UPGRADE to donate $.99 and unlock premium"
        android:textColor="@color/col4"
        android:textSize="15sp"
        android:layout_margin="10dp"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "press WATCH VIDEOS to watch videos and unlock premium"
        android:textColor="@color/green"
        android:textSize="15sp"
        android:layout_margin="10dp"
        ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_upgrade"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:text="UPGRADE"
            android:textColor="@color/col4"
            android:textStyle="bold"
            android:foreground = "?attr/selectableItemBackground"
            android:textSize="17sp">
        </TextView>
        <TextView
            android:id="@+id/tv_watch"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:text="WATCH VIDEOS"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:foreground = "?attr/selectableItemBackground"
            android:textSize="17sp">
        </TextView>
        <TextView
            android:id="@+id/tv_exit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="#FF0000"
            android:text="EXIT"
            android:textStyle="bold"
            android:foreground = "?attr/selectableItemBackground"
            android:textSize="17sp">
        </TextView>
    </LinearLayout>

</LinearLayout>