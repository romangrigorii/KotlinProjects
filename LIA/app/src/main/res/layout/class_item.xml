<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="3dp"
    android:paddingStart="2dp"
    android:background="@drawable/log_in_info_style_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clMain"
    android:layout_margin="1dp"
    android:paddingBottom="3dp"
    >

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/smiley"
        android:padding="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </ImageView>

    <TextView
        android:id="@+id/tvclassName"
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:textColor="@color/col1"
        app:layout_constraintStart_toEndOf="@id/ivLogo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="20sp"
        android:text="CLASS NAME"
        android:maxLines="1"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/bBegin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/cvAnalyze"
        android:layout_margin="2dp"
        >
        <ImageView
            android:id="@+id/ivAnalyze"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/analytics"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="5dp"
            >>
        </ImageView>
        <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:textColor="@color/col1"
            app:layout_constraintTop_toBottomOf="@id/ivAnalyze"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/ivAnalyze"
            app:layout_constraintEnd_toEndOf="@id/ivAnalyze"
            android:textSize="13sp"
            android:paddingBottom="10dp"
            android:text="analytics"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/cvAnalyze"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/cvUpgrade"
        android:layout_margin="2dp"
        >

    <ImageView
        android:id="@+id/ivUpgrade"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src = "@drawable/star_grey"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="2dp">
    </ImageView>

    <TextView
        android:id="@+id/tvUpgrade"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:textColor="@color/col1"
        app:layout_constraintTop_toBottomOf="@id/ivUpgrade"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/ivUpgrade"
        app:layout_constraintEnd_toEndOf="@id/ivUpgrade"
        android:paddingBottom="10dp"
        android:textSize="13sp"
        android:text="upgrade"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bBegin"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:text="BEGIN"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="5dp"
        android:background="@drawable/button_style"
        >

    </androidx.appcompat.widget.AppCompatButton>




</androidx.constraintlayout.widget.ConstraintLayout>